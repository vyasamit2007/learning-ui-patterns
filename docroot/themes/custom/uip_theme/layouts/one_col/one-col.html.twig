{#
/**
 * @file
 * Template for a one column layout.
 */
#}
{%
set classes = [
'layout',
'layout--one-col',
]
%}

{% if content %}
  <div{{ attributes.addClass(classes) }}>

    {% if content.main %}
      <div {{ region_attributes.main.addClass('layout__region', 'layout__region--main') }}>
        {{ content.main }}
      </div>
    {% endif %}

  </div>
{% endif %}

